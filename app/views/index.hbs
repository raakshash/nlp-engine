<div class="main">
    <div class="row">
        <div class="col-3 col-lg-3 col-sm-3 col-xs-3">
            <div class="row userTitle">
                Train your bot
            </div>
            <hr>
            <div class="container">
                <form action="/addClassifiedData" method="POST">
                    <div class="md-form active-cyan-2 mb-3">
                        <input name="entity" class="form-control" type="text" placeholder="Type your Intent"
                            aria-label="entity" required>
                    </div>
                    <div class="md-form active-cyan-2 mb-3">
                        <input name="expression" class="form-control" type="text" placeholder="Type your expression"
                            aria-label="expression" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Add</button>
                </form>
            </div>
            {{!-- <br><br>
            <hr>
            <br><br>
            <div class="container">
                <a href="/train" class="btn btn-primary btn-block">Train Now</a>
            </div> --}}
            <br><hr><br>
            <div class="container">
                <div class="container">
                    <form action="/getClassifiedData" method="POST">
                        <div class="md-form active-cyan-2 mb-3">
                            <input name="expression" class="form-control" type="text" placeholder="Type your expression"
                                aria-label="expression" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Get</button>
                    </form>
                </div>
                <hr>
                <div class="container dataWrapper">
                    {{#each classified.classification}}
                    <div>
                        classified as: <h2>{{this.label}}: {{this.value}}</h2>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
