        {{!-- <span class="border-right"></span> --}}
        <div class="col-9 col-lg-9 col-sm-9 col-xs-9">
            <div class="container">
                <form action="/checkcontents" method="POST" class="search">
                    <div class="md-form active-cyan-2 mb-3">
                        <input name="expression" class="form-control" type="text" placeholder="Type your expression"
                            aria-label="expression">
                    </div>
                </form>
                <br>
            </div>
            <div class="container-fluid wrapper">
                {{#if result}}
                <h2>{{result.expression}}</h2>
                <table class="table table-striped">
                    <tr>
                        <td><strong>Keyword</strong></td>
                        <td>
                            {{#each result.keywords}}
                            {{this}},
                            {{/each}}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Sentiments</strong></td>
                        <td>
                            {{result.sentiment}}
                        </td>
                    </tr>
                </table>
                <br><br>
                <h2>User expression data</h2>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">POS</th>
                            <th scope="col">Definition</th>
                            <th scope="col">Gloss</th>
                            <th scope="col">Lemmate</th>
                            <th scope="col">Synonyms</th>
                            <th scope="col">Word Count</th>
                            <th scope="col">Expression</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each result.results}}
                        <tr>
                            <td>{{this.pos}}</td>
                            <td>{{this.def}}</td>
                            <td class="wrap">{{this.gloss}}</td>
                            <td>{{this.lemma}}</td>
                            <td>
                                {{#each this.synonyms}}
                                {{this}},
                                {{/each}}
                            </td>
                            <td>{{this.wCnt}}</td>
                            <td class="wrap">
                                {{#each this.exp}}
                                {{this}},
                                {{/each}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{/if}}
            </div>
        </div>
    </div>
</div>